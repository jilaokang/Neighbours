<script>
import wepy from 'wepy';
import otherMsg from '../../coomponent/otherMsg';
import myMsg from '../../coomponent/myMsg';

export default class chat extends wepy.page {
  components = {
    otherMsg: otherMsg,
    myMsg: myMsg
  };

  data = {
    scrollTop: 0,
    focus: false,
    openId: '',
    showFooterNav: false,
    showFooterSendButton: false,

    userInfo: {},
    msgList: [],
    postmssage: {
      type: 'chatMessage',
      data: {
        mine: { content: 'dsadsadsa' },
        to: { type: 'other', id: '420102001001001' }
      }
    },
    message: {
      type: 'init',
      data: {
        user_id: null,
        openid: null,
        wangge_id: null,
        name: null,
        headimgurl: null
      }
    }
  };

  methods = {
    isBack: value => (this[value] = !this[value]),
    isShow: value => (this[value] = true),
    isHidden: value => (this[value] = false),
    getMsg: e => {
      console.log(e.detail.value);
      this.postmssage.data.mine.content = e.detail.value;
      // this.showFooterSendButton = e.detail.value ? true : false;
      this.$apply();
    },
    async postMessage() {
      let that = this;
      console.log('ddd');
      let POSTDATA = JSON.stringify(that.postmssage);

      await wepy.sendSocketMessage({ data: POSTDATA }).then(console.log);
    }
  };
  async onShow() {
    let that = this;

    await wepy
      .getStorage({
        key: 'userLogin'
      })
      .then(res => {
        that.message.data.wangge_id = res.data.wgbm;
        that.message.data.name = res.data.name;
        that.postmssage.data.to.id = res.data.wgbm;
      })
      .catch(res => {
        console.log(res);
        wx.navigateTo({
          url: '/pages/login/index'
        });
      });

    await wepy
      .getStorage({
        key: 'openid'
      })
      .then(res => (that.message.data.openid = res.data.openid));

    await wepy
      .getStorage({
        key: 'userinfo'
      })
      .then(res => {
        that.message.data.user_id = res.data.id;
        that.message.data.headimgurl = res.data.avatar;
      });

    await wepy.connectSocket({ url: 'wss://wll.tenqent.com:4431' });

    // 初次握手验证
    await wepy.onSocketOpen(function(res) {
      console.log('WebSocket连接已打开！');
      let postMsgData = JSON.stringify(that.message);
      wepy.sendSocketMessage({
        data: postMsgData
      });
    });
    await wepy.onSocketMessage(function(res) {
      console.log('收到服务器内容：' + res.data);
      let data = JSON.parse(res.data);
      if (data.type != 'ping') that.msgList.push(data);
      that.$apply();
    });
  }
  // async onLoad(opts) {
